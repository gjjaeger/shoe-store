<h1>Update <%=@store.name() %> </h1>

  <form action="/store/<%= @store.id() %>" method="post">
    <input name="_method" type="hidden" value="patch">
    <label for="name">Rename your store:</label>
    <input id="name" name="name" type="text" placeholder="<%= @store.name() %>">
    <label for="address">Change your store's address:</label>
    <input id="address" name="address" type="text" placeholder="<%= @store.address() %>">

    <button class="btn btn-default" type="submit">Update</button>
  </form>

  <form action="/store/<%= @store.id() %>" method="post">
    <input name="_method" type="hidden" value="delete">

    <button class="btn btn-default" type="submit">Delete store</button>
  </form>
